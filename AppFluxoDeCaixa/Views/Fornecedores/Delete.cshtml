@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Deletar Cadastro de Fornecedores";
}

<h1 class="display-5 text-light text-center">@ViewData["Title"]</h1>

<h3 class="mt-3 m-3">Deseja excluir este cadastro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-9">
            @Model.Email
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FornecedorId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>
